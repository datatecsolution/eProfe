<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="2dp"
        android:focusable="false"
        android:selectAllOnFocus="false"
        android:paddingRight="8dp">


        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="100dp"
            android:layout_height="50dp"
            app:boxBackgroundColor="@color/primaryDarkColor"
            android:enabled="false"
            android:clickable="false"
            android:selectAllOnFocus="false"
            android:focusable="false"
            android:padding="0dp"
            app:startIconDrawable="@drawable/ic_poll_black_24dp"
            app:startIconTint="@color/cardview_light_background">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etValorAcum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false"
                android:enabled="false"
                android:inputType="none"
                android:selectAllOnFocus="false"
                android:focusable="false"
                android:padding="0dp"
                android:textColor="@color/secondaryColor"
                android:textSize="12sp"
                android:textStyle="bold" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:orientation="vertical"
            app:cardCornerRadius="7dp"
            app:cardBackgroundColor="@color/primaryLightColor"
            app:cardElevation="30dp">

            <TextView
                android:id="@+id/tvNombreAcumulativo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="TextView"
                android:textColor="@color/primaryTextColor"
                android:textSize="14sp"
                android:textStyle="bold" />

        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:cardCornerRadius="7dp"
            app:cardElevation="30dp">


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="0dp"
                app:errorEnabled="true"
                app:boxBackgroundColor="@color/secondaryColor"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNota"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="numberDecimal"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="12sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold" />

            </com.google.android.material.textfield.TextInputLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</FrameLayout>
